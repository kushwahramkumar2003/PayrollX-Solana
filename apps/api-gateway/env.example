# Server Configuration
HOST=127.0.0.1
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-api-gateway
JWT_REFRESH_SECRET=your-super-secret-refresh-key-for-api-gateway
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
