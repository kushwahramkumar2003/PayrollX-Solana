# Server Configuration
HOST=127.0.0.1
PORT=3008
NODE_ENV=development

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/payrollx_notification

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-notification-service
JWT_REFRESH_SECRET=your-super-secret-refresh-key-for-notification-service
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@payrollx.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672

