{
  "name": "payrollx-solana",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "npm run build --workspace=packages/common && npm run build --workspace=packages/contracts && npm run build --workspace=packages/database && npm run build --workspace=packages/ui",
    "dev": "turbo run dev --concurrency=5 --filter='!@payrollx/mpc-server'",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "check-types": "turbo run check-types",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "clean": "turbo run clean",
    "db:generate": "cd packages/database && npm run prisma:generate:all",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "dev:infra": "docker-compose -f docker-compose.infra.yml up -d",
    "dev:infra:down": "docker-compose -f docker-compose.infra.yml down",
    "dev:start": "./dev.sh",
    "dev:stop": "./dev.sh stop",
    "dev:status": "./dev.sh status",
    "dev:restart": "./dev.sh restart",
    "dev:setup": "cp env.local .env.local && npm install && npm run db:generate && npm run build:packages",
    "dev:health": "./health-check.sh",
    "db:setup": "./setup-db.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18",
    "yarn": ">=1.22.0"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "programs/*"
  ],
  "resolutions": {
    "@payrollx/database": "*",
    "@payrollx/contracts": "*",
    "@payrollx/common": "*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "lucide-react": "^0.546.0"
  }
}
