{
  "compilerOptions": {
    "types": ["node", "chai", "mocha"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  }
}

